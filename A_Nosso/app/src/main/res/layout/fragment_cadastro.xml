<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CadastroFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/cadastroLayout"
        >

        <ImageView
            android:id="@+id/img_cadastro"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/logo_simples"
            />

        <TextView
            android:id="@+id/text_cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Cadastro"
            android:textSize="45sp"
            android:textColor="#000"
            />

        <EditText
            android:id="@+id/edit_cad_nome"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="textPersonName"
            android:hint="Nome Completo"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/edit_cad_email"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="textEmailAddress"
            android:hint="Endereço do Email"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/edit_cad_fone"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="phone"
            android:hint="Telephone"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/edit_cad_senha"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="phone"
            android:hint="Nova Senha"
            android:textSize="20sp"
            />

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >


        <Button
            android:id="@+id/btLogin"
            android:layout_width="135dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="50dp"
            android:text="JÁ TEM CADASTRO?"
            android:textSize="16sp"
            android:textColor="#FFFF"
            android:background="@drawable/borda_rendonda"
            />

        <Button
            android:id="@+id/btCadastrar"
            android:layout_width="135dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="CADASTRAR"
            android:textSize="16sp"
            android:textColor="#FFFF"
            android:background="@drawable/borda_rendonda"

            />
    </LinearLayout>



    </LinearLayout>
</layout>




