<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FinalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/finalLayout"
        >

        <TextView
            android:id="@+id/text_titulo_final"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Carrinho"
            android:textColor="#000"
            android:textSize="30sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/img_compra_maca"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/maca"
                />

            <TextView
            android:id="@+id/text_maca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="MaÃ§a "
            android:textColor="#000"
            android:textSize="20sp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 6,00"
                android:textColor="#000"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL:"
                android:textColor="#000"
                android:textSize="20sp"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/text_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Data de Retirada"
            android:textColor="#000"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btPagar"
            android:layout_width="135dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="50dp"
            android:text="PAGAMENTO"
            android:textSize="16sp"
            android:textColor="#FFFF"
            android:background="@drawable/borda_rendonda"
            />



    </LinearLayout>
</layout>



