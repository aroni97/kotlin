<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FrutasFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/frutasLayout"
        >
        <TextView
            android:id="@+id/text_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Frutas"
            android:textSize="40sp"
            android:textColor="#000"
            />
        <!--        uva e maÃ§a -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            >
        <ImageView
            android:id="@+id/img_list_uva"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/uva"
            />
        <Button
            android:id="@+id/btAddUva"
            android:layout_width="135dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="+ ADICIONAR"
            android:textSize="16sp"
            android:textColor="#FFFF"
            android:background="@drawable/borda_rendonda"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/img_list_maca"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/maca"
            />
        <Button
            android:id="@+id/btAddMaca"
            android:layout_width="135dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="+ ADICIONAR"
            android:textSize="16sp"
            android:textColor="#FFFF"
            android:background="@drawable/borda_rendonda"
            />
    </LinearLayout>

                <!--        banana e pera -->

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="30dp"
                >
                <ImageView
                    android:id="@+id/img_list_banana"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/banana"
                    />
                <Button
                    android:id="@+id/btAddBanana"
                    android:layout_width="135dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:text="+ ADICIONAR"
                    android:textSize="16sp"
                    android:textColor="#FFFF"
                    android:background="@drawable/borda_rendonda"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/img_list_pera"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/pera"
                    />
                <Button
                    android:id="@+id/btAddPera"
                    android:layout_width="135dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:text="+ ADICIONAR"
                    android:textSize="16sp"
                    android:textColor="#FFFF"
                    android:background="@drawable/borda_rendonda"
                    />
            </LinearLayout>


    </LinearLayout>
    </LinearLayout>
</layout>
